{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "react-native": [
        "./node_modules/react-native-web"
      ],
      "react-native/*": [
        "./node_modules/react-native-web/*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "react-native"
    ]
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "global.ts",
    "index.web.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}